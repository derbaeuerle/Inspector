<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="AUDIO"
        android:title="Audio" >
        <EditTextPreference
            android:defaultValue="5"
            android:inputType="number"
            android:key="audio:mTimeout"
            android:title="Timeout (sec.)" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="audio:mUseTimeout"
            android:title="Use player timeout" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_attr_auth_types"
            android:entryValues="@array/auth_types"
            android:key="audio:mPermissionType"
            android:title="@string/pref_title_auth_types" />
    </PreferenceCategory>

</PreferenceScreen>