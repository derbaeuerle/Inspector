<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.inspector.hsrm.TestInspector"
    android:versionCode="1"
    android:versionName="Alpha" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.inspector.hsrm.activities.BroadcastActivity"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="inspector" />
            </intent-filter>
        </activity>

        <receiver
            android:name="de.inspector.hsrm.broadcasts.ServiceReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="de.inspector.intents" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="inspect" />
            </intent-filter>
        </receiver>
    </application>

</manifest>